- hosts: localhost

- tasks:
- name: Bootstrap development environment
  become: true
  become_flags: -i
  ansible.builtin.script: curl -o- https://raw.githubusercontent.com/creationix/nvm/v0.40.1/install.sh | bash
  args:
    executable: /bin/bash
    chdir: "$HOME"
    creates: "$HOME/.nvm/nvm.sh"
